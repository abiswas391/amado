doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="description" content="")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")

        // The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags
        // Title
        // <title>Amado | Furniture Ecommerce website | Home</title>
        title Amado | Mobile Store
        // Favicon
        link(rel="icon" href="/img/core-img/favicon.ico")
        // Core Style CSS
        link(rel="stylesheet" href="/css/core-style.css")
        link(rel="stylesheet" href="/style.css")
        script(src='https://unpkg.com/axios/dist/axios.min.js')
    body
        .main
            // Another variation with a button
            .row
                .col-md-6(style="text-align: left")
                    .input-group
                        input.form-control(type="text" placeholder="Type your keyword here...")
                        .input-group-append
                            button.btn.btn-secondary(type="button")
                                i.fa.fa-search
                .col-md-4
                    .login-panel
                        if userName
                            p.loggedIn-user Hi #{userName.split(' ')[0]}
                        else
                            button.btn.btn-warning.btn-lg#login-btn(name="login" style="margin-left: 50px") Login
                .col-md-2
                    if userName
                        button.btn.btn-warning.btn-lg#logout-btn(name="login" style="margin-left: 350px") Logout
                        
            //- .login-greeting
            //-     p Hi Abhijit

        //- // Search Wrapper Area Start
        //- .search-wrapper.section-padding-100
        //-     .search-close
        //-         i.fa.fa-close(aria-hidden="true")
        //-     .container
        //-         .row
        //-             .col-12
        //-                 .search-content
        //-                     form(action="#" method="get")
        //-                         input#search(type="search" name="search" placeholder="Type your keyword...")
        //-                         button(type="submit")
        //-                             img(src="img/core-img/search.png" alt="")
        // Search Wrapper Area End
        // ##### Main Content Wrapper Start #####
        .main-content-wrapper.d-flex.clearfix
            //- input.form-control(type="text" placeholder="Search" aria-label="Search")
            // Mobile Nav (max width 767px)
            .mobile-nav
                // Navbar Brand
                .amado-navbar-brand
                    a(href="#")
                        img(src="img/core-img/logo.png" alt="")
                // Navbar Toggler
                .amado-navbar-toggler
                    span
                    span
                    span
            // Header Area Start
            header.header-area.clearfix
                // Close Icon
                .nav-close
                    i.fa.fa-close(aria-hidden="true")
                // Logo
                .logo
                    a(href="#")
                        img(src="img/core-img/logo.png" alt="")
                        h4 Mobile Store

                
                        
                // Amado Nav
                nav.amado-nav
                    
                    ul
                        li.active
                            a(href="/") Home
                        li
                            a(href="/shop") Shop
                        li
                            a(href="/productDetails") Product
                        li
                            a(href="cart.html") Cart
                        li
                            a(href="checkout.html") Checkout
                // Button Group
                .amado-btn-group.mt-30.mb-100
                    a.btn.amado-btn.mb-15(href="#") %Discount%
                    a.btn.amado-btn.active(href="#") New this week
                // Cart Menu
                .cart-fav-search.mb-100
                    a.cart-nav(href="cart.html")
                        img(src="img/core-img/cart.png" alt="")
                        |  Cart 
                        span (0)
                    a.fav-nav(href="#")
                        img(src="img/core-img/favorites.png" alt="")
                        |  Favourite
                    //- a.search-nav(href="#")
                    //-     img(src="img/core-img/search.png" alt="")
                    //-     |  Search
                // Social Button
                .social-info.d-flex.justify-content-between
                    a(href="#")
                        i.fa.fa-pinterest(aria-hidden="true")
                    a(href="#")
                        i.fa.fa-instagram(aria-hidden="true")
                    a(href="#")
                        i.fa.fa-facebook(aria-hidden="true")
                    a(href="#")
                        i.fa.fa-twitter(aria-hidden="true")
            // Header Area End
            // Product Catagories Area Start
            .products-catagories-area.clearfix
                .amado-pro-catagory.clearfix
                   each product in products 
                        // Single Catagory
                        .single-products-catagory.clearfix
                            a(href=`/product/${product.slug}`)
                                //- img(src=`img/bg-img/${i+1}.jpg` alt="")
                                img(src=`img/product-img/${product.images[0]}` alt="")
                                // Hover Content
                                .hover-content
                                    .line
                                    p Rs.#{product.price}
                                    h4= product.name
            // Product Catagories Area End
            // ##### Main Content Wrapper End #####
            // ##### Newsletter Area Start #####
        section.newsletter-area.section-padding-100-0
            .container
                .row.align-items-center
                    // Newsletter Text
                    .col-12.col-lg-6.col-xl-7
                        .newsletter-text.mb-100
                            h2
                                | Subscribe for a 
                                span 25% Discount
                            p
                                | Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit
                                | amet mi vulputate consectetur. Donec auctor interdum purus, ac
                                | finibus massa bibendum nec.
                    // Newsletter Form
                    .col-12.col-lg-6.col-xl-5
                        .newsletter-form.mb-100
                            form(action="#" method="post")
                                input.nl-email(type="email" name="email" placeholder="Your E-mail")
                                input(type="submit" value="Subscribe")
        // ##### Newsletter Area End #####
        // ##### Footer Area Start #####
        footer.footer_area.clearfix
            .container
                .row.align-items-center
                    // Single Widget Area
                    .col-12.col-lg-4
                        .single_widget_area
                            // Logo
                            .footer-logo.mr-50
                                a(href="/")
                                    img(src="img/core-img/logo2.png" alt="")
                            // Copywrite Text
                            p.copywrite
                                // Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0.
                                | Copyright Â©
                                script.
                                    document.write(new Date().getFullYear());
                                |                 All rights reserved | This template is made with
                                i.fa.fa-heart-o(aria-hidden="true")
                                |  by
                                a(href="https://colorlib.com" target="_blank") Colorlib
                                // Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0.
                                // Single Widget Area
                    .col-12.col-lg-8
                        .single_widget_area
                            // Footer Menu
                            .footer_menu
                                nav.navbar.navbar-expand-lg.justify-content-end
                                    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation")
                                        i.fa.fa-bars
                                    #footerNavContent.collapse.navbar-collapse
                                        ul.navbar-nav.ml-auto
                                            li.nav-item.active
                                                a.nav-link(href="/") Home
                                            li.nav-item
                                                a.nav-link(href="/shop") Shop
                                            li.nav-item
                                                a.nav-link(href="/productDetails") Product
                                            li.nav-item
                                                a.nav-link(href="cart.html") Cart
                                            li.nav-item
                                                a.nav-link(href="checkout.html") Checkout
            // ##### Footer Area End #####
            // ##### jQuery (Necessary for All JavaScript Plugins) #####
            script(src="js/jquery/jquery-2.2.4.min.js")
            // Popper js
            script(src="js/popper.min.js")
            // Bootstrap js
            script(src="js/bootstrap.min.js")
            // Plugins js
            script(src="js/plugins.js")
            // Active js
            script(src="js/active.js")
            script(src="js/index.js")
            script(src="js/login.js")
