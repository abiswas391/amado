doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="description" content="")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    // The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags
    // Title
    title Amado - Furniture Ecommerce Template | Product Details
    // Favicon
    link(rel="icon" href="/img/core-img/favicon.ico")
    // Core Style CSS
    link(rel="stylesheet" href="/css/core-style.css")
    link(rel="stylesheet" href="/style.css")

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
    script(src='https://js.stripe.com/v3/')
    script(src='https://unpkg.com/axios/dist/axios.min.js')
  body
    // Search Wrapper Area Start
    .search-wrapper.section-padding-100
      .search-close
        i.fa.fa-close(aria-hidden="true")
      .container
        .row
          .col-12
            .search-content
              form(action="#" method="get")
                input#search(type="search" name="search" placeholder="Type your keyword...")
                button(type="submit")
                  img(src="img/core-img/search.png" alt="")
    // Search Wrapper Area End
    // ##### Main Content Wrapper Start #####
    .main-content-wrapper.d-flex.clearfix
      // Mobile Nav (max width 767px)
      .mobile-nav
        // Navbar Brand
        .amado-navbar-brand
          a(href="/")
            img(src="img/core-img/logo.png" alt="")
        // Navbar Toggler
        .amado-navbar-toggler
          span
          span
          span
      // Header Area Start
      header.header-area.clearfix
        // Close Icon
        .nav-close
          i.fa.fa-close(aria-hidden="true")
        // Logo
        .logo
          a(href="/")
            img(src="img/core-img/logo.png" alt="")
        // Amado Nav
        nav.amado-nav
          ul
            li
              a(href="/") Home
            li
              a(href="/shop") Shop
            li.active
              a(href="product-details.html") Product
            li
              a(href="cart.html") Cart
            li
              a(href="checkout.html") Checkout
        // Button Group
        .amado-btn-group.mt-30.mb-100
          a.btn.amado-btn.mb-15(href="#") %Discount%
          a.btn.amado-btn.active(href="#") New this week
        // Cart Menu
        .cart-fav-search.mb-100
          a.cart-nav(href="cart.html")
            img(src="img/core-img/cart.png" alt="")
            |  Cart 
            span (0)
          a.fav-nav(href="#")
            img(src="img/core-img/favorites.png" alt="")
            |  Favourite
          a.search-nav(href="#")
            img(src="img/core-img/search.png" alt="")
            |  Search
        // Social Button
        .social-info.d-flex.justify-content-between
          a(href="#")
            i.fa.fa-pinterest(aria-hidden="true")
          a(href="#")
            i.fa.fa-instagram(aria-hidden="true")
          a(href="#")
            i.fa.fa-facebook(aria-hidden="true")
          a(href="#")
            i.fa.fa-twitter(aria-hidden="true")
      // Header Area End
      // Product Details Area Start
      .single-product-area
        .container-fluid
          .row
            .col-12
              nav(aria-label="breadcrumb")
                ol.breadcrumb.mt-50
                  li.breadcrumb-item
                    a(href="/") Home
                  //- li.breadcrumb-item
                  //-   a(href="#") Furniture
                  //- li.breadcrumb-item
                  //-   a(href="#") Chairs
                  li.breadcrumb-item.active(aria-current="page") #{product.name}
          .row
            .col-12.col-lg-7
              .single_product_thumb
                #product_details_slider.carousel.slide(data-ride="carousel")
                  ol.carousel-indicators
                    li.active(data-target="#product_details_slider" data-slide-to="0" style="background-image: url('/img/product-img/#{product.images[0]}');")
                    li(data-target="#product_details_slider" data-slide-to="1" style="background-image: url('/img/product-img/#{product.images[1]}');")
                    //- li(data-target="#product_details_slider" data-slide-to="2" style="background-image: url(img/product-img/pro-big-3.jpg);")
                    //- li(data-target="#product_details_slider" data-slide-to="3" style="background-image: url(img/product-img/pro-big-4.jpg);")
                  .carousel-inner
                    //- .carousel-item.active
                    //-       a.gallery_img(href=`/img/product-img/${product.images[0]}`)
                    //-         img.d-block.w-100(src=`/img/product-img/${product.images[0]}` alt=`${product.slug}`)
                    
                    each image, i in product.images
                      if i === 0
                        .carousel-item.active
                          a.gallery_img(href=`/img/product-img/${image}`)
                            img.d-block.w-100(src=`/img/product-img/${image}` alt=`${product.slug}`)
                      else
                        .carousel-item
                          a.gallery_img(href=`/img/product-img/${image}`)
                            img.d-block.w-100(src=`/img/product-img/${image}` alt=`${product.slug}`)
                    //- .carousel-item
                    //-   a.gallery_img(href=`/img/product-img/${product.images[1]}`)
                    //-     img.d-block.w-100(src=`/img/product-img/${product.images[1]}` alt=`${product.slug}`)
                    //- .carousel-item
                    //-   a.gallery_img(href=`/img/product-img/${product.images[2]}`)
                    //-     img.d-block.w-100(src=`/img/product-img/${product.images[2]}` alt=`${product.slug}`)
                    //- .carousel-item
                    //-   a.gallery_img(href=`/img/product-img/${product.images[3]}`)
                    //-     img.d-block.w-100(src=`/img/product-img/${product.images[3]}` alt=`${product.slug}`)
                    //- .carousel-item
                    //-   a.gallery_img(href=`/img/product-img/${product.images[4]}`)
                    //-     img.d-block.w-100(src=`/img/product-img/${product.images[4]}` alt=`${product.slug}`)
            .col-12.col-lg-5
              .single_product_desc
                // Product Meta Data
                .product-meta-data
                  // Ratings & Review
                  .ratings-review.mb-15.d-flex.align-items-center.justify-content-between
                    .ratings
                      i.fa.fa-star(aria-hidden="true")
                      i.fa.fa-star(aria-hidden="true")
                      i.fa.fa-star(aria-hidden="true")
                      i.fa.fa-star(aria-hidden="true")
                      i.fa.fa-star(aria-hidden="true")
                    .review
                      a(href="#") Write A Review
                  a(href="product-details.html")
                    h6= product.name
                  .line
                  p.product-price Rs.#{product.price}
                  // Avaiable
                  p.avaibility
                    i.fa.fa-circle
                    |  In Stock
                .short_overview.my-5
                  //- p
                  //-   | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid quae eveniet culpa officia quidem mollitia impedit iste asperiores nisi reprehenderit consequatur, autem, nostrum pariatur enim?
                  p(style="color: #fbb710") Specification
                  each spec in speci
                   h10 #{spec}
                   br
                // Add to Cart Form
                if userName
                  button.btn.amado-btn(data-productid=`${product.id}`  name="order-product" id="order-product") Order now
                else
                  a(href='/login.html')
                    button.btn.amado-btn Please login to order
                //- form.cart.clearfix(method="post")
                //-   .cart-btn.d-flex.mb-50
                //-     p Qty
                //-     .quantity
                //-       span.qty-minus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                //-         i.fa.fa-caret-down(aria-hidden="true")
                //-       input#qty.qty-text(type="number" step="1" min="1" max="300" name="quantity" value="1")
                //-       span.qty-plus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                //-         i.fa.fa-caret-up(aria-hidden="true")
                //-   button.btn.amado-btn#order-product(data-productid=`${product.id}`  name="addtocart") Add to cart
      // Product Details Area End
    // ##### Main Content Wrapper End #####
    // ##### Newsletter Area Start #####
    section.newsletter-area.section-padding-100-0
      .container-fluid
        .row.align-items-center
          // Newsletter Text
          .col-12.col-lg-6.col-xl-7
            .newsletter-text.mb-100
              h2
                | Subscribe for a 
                span 25% Discount
              p
                | Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit amet mi vulputate consectetur. Donec auctor interdum purus, ac finibus massa bibendum nec.
          // Newsletter Form
          .col-12.col-lg-6.col-xl-5
            .newsletter-form.mb-100
              form(action="#" method="post")
                input.nl-email(type="email" name="email" placeholder="Your E-mail")
                input(type="submit" value="Subscribe")
    // ##### Newsletter Area End #####
    // ##### Footer Area Start #####
    footer.footer_area.clearfix
      .container
        .row.align-items-center
          // Single Widget Area
          .col-12.col-lg-4
            .single_widget_area
              // Logo
              .footer-logo.mr-50
                a(href="/")
                  img(src="img/core-img/logo2.png" alt="")
              // Copywrite Text
              p.copywrite
                // Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0.
                | Copyright Â©
                script.
                  document.write(new Date().getFullYear());
                |  All rights reserved | This template is made with 
                i.fa.fa-heart-o(aria-hidden="true")
                |  by 
                a(href="https://colorlib.com" target="_blank") Colorlib
                // Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0.
          // Single Widget Area
          .col-12.col-lg-8
            .single_widget_area
              // Footer Menu
              .footer_menu
                nav.navbar.navbar-expand-lg.justify-content-end
                  button.navbar-toggler(type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation")
                    i.fa.fa-bars
                  #footerNavContent.collapse.navbar-collapse
                    ul.navbar-nav.ml-auto
                      li.nav-item.active
                        a.nav-link(href="/") Home
                      li.nav-item
                        a.nav-link(href="/shop") Shop
                      li.nav-item
                        a.nav-link(href="/productDetails") Product
                      li.nav-item
                        a.nav-link(href="cart.html") Cart
                      li.nav-item
                        a.nav-link(href="checkout.html") Checkout
    // ##### Footer Area End #####
    // ##### jQuery (Necessary for All JavaScript Plugins) #####
    
    script(src="/js/jquery/jquery-2.2.4.min.js")
    // Popper js
    script(src="/js/popper.min.js")
    // Bootstrap js
    script(src="/js/bootstrap.min.js")
    // Plugins js
    script(src="/js/plugins.js")
    // Active js
    script(src="/js/active.js")
    script(src='https://unpkg.com/axios/dist/axios.min.js')
    script(src="/js/stripe.js")
    
